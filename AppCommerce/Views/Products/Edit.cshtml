@model AppCommerce.ViewModels.ProductImagesViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4 class="primary">تعديل بيانات الصنف</h4>
            <hr />
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label class="control-label">المنتج</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">الوصف</label>
                            <input asp-for="ProductDescription" class="form-control" />
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">السعر</label>
                            <input asp-for="ProductPrice" class="form-control" />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">الصنف</label>
                            <select asp-for="CatogaryId" class="select2 form-control" asp-items="@(new SelectList(Model.Catogary,"Id","CatogaryName"))"></select>
                            <span asp-validation-for="CatogaryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <fieldset class="form-group">
                                <label class="control-label">الصورة</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" asp-for="File" multiple>
                                    <label class="custom-file-label" for="inputGroupFile01">اختار الصورة</label>
                                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                                </div>
                            </fieldset>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="حفظ" class="btn btn-primary" /> |
                            <a asp-action="Index" class="btn btn-outline-info">رجوع</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>