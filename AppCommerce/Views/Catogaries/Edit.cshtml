@model DAL.Entities.Catogary

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4 class="primary">تعديل بيانات الصنف</h4>
            <hr />
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label class="control-label">الصنف</label>
                            <input asp-for="CatogaryName" class="form-control" />
                            <span asp-validation-for="CatogaryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="حفظ" class="btn btn-primary" /> |
                            <a asp-action="Index" class="btn btn-outline-info">رجوع</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>