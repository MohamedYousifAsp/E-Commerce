@model IEnumerable<DAL.Entities.Catogary>

@{
    ViewData["Title"] = "Index";
}


<div class="container-md">
<div class="card">
    <div class="card-header"><h4 class="primary">قائمة الاصناف</h4></div>
    <hr />
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-primary"><i class="ft-plus-circle mr-2 h5 white"></i>إضافة صنف</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                       الصنف
                    </th>
                    <th>
                        العمليات
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatogaryName)
                        </td>
                        <td>

                            <div class="btn btn-group btn-group-sm mt-0 ">

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit mr-1"></i> تعديل</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-eye mr-1"></i> عرض</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash  mr-1"></i>حذف</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
</div>